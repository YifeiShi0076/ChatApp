<Window x:Class="RedisChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Redis Chat App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- 聊天记录 -->
            <RowDefinition Height="Auto" />
            <!-- 输入框和按钮 -->
        </Grid.RowDefinitions>

        <!-- 聊天记录 -->
        <TextBox x:Name="ChatBox" 
                 VerticalScrollBarVisibility="Auto" 
                 IsReadOnly="True" 
                 TextWrapping="Wrap" 
                 Margin="10" />

        <!-- 输入框和按钮 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="InputBox" Width="600" Margin="0,0,10,0" />
            <Button Content="发送" Width="80" Click="SendMessage_Click" />
        </StackPanel>
    </Grid>
</Window>